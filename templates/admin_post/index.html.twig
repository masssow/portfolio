{% extends 'admin-base.html.twig' %}

{% block title %}Posts index{% endblock %}

{% block body %}
<div class="container">
    <h1>Posts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>ImageName</th>
                {# <th>ImageSize</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td><img src="{{ asset ('images/posts/' ~ post.imageName)}}" style="max-height:150px;
                width:auto;" alt=""></td>
                {# <td>{{ post.imageSize }}</td> #}
                <td>
                    <a href="{{ path('app_admin_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_post_new') }}">Create new</a>
    </div>
        </div>
            </div>
{% endblock %}
