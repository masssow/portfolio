        <aside class="single_sidebar_widget popular_post_widget">
            <h3 class="widget_title">Popular Posts</h3>
            {% for popularPost in popularPosts %}
            <div class="media post_item">
                <img src="{{ asset('images/posts/' ~ popularPost.imageName)}}" alt="{{ popularPost.title }}" style="max-width: 100px; height: auto;">
                <div class="media-body">
                    <a href="{{ path('app_single_posts', {'id' : popularPost.id }) }}"><h3>{{popularPost.title}}</h3></a>
                    {% if popularPost.createdAt > (date()|date_modify('-1 month')) %}
                    <p>Publié il y a {{ popularPost.createdAt|time_ago }}</p>
                    {% else %}
                    <p>Publié le {{ popularPost.createdAt|date('d M Y') }}</p>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
